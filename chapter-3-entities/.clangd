CompileFlags:
  Add:
    # This is a config file only for *nix systems like macOS and Linux
    - "-xc++"
    - "-std=c++23"
    - "-nostdinc++"
    - "-nostdinc"
    - "-fno-rtti"
    - "-fno-exceptions"
    - "-fno-threadsafe-statics"
    - "-ffast-math"
    - '-DBN_EWRAM_BSS_SECTION=".sbss"'
    - "-DBN_IWRAM_START=__iwram_start__"
    - "-DBN_IWRAM_TOP=__iwram_top"
    - "-DBN_IWRAM_END=__fini_array_end"
    - "-DBN_ROM_START=__text_start"
    - "-DBN_ROM_END=__rom_end__"
    - '-DBN_TOOLCHAIN_TAG="DKA"'
    - "-D__ARM_ARCH_4T__"
    - "-D__arm__"
    - "-I../include"
    - "-I../include/fonts"
    - "-I../../butano/common/include"
    - "-I../../butano/butano/include"
    - "-I../../butano/butano/hw/include"
    - "-I../../butano/butano/hw/3rd_party/libtonc/include"
    - "-I../../butano/butano/hw/3rd_party/libugba/include"
    - "-I../../butano/butano/hw/3rd_party/maxmod/include"
    - "-I../build"
    - "-isystem"
    - "/Library/Developer/CommandLineTools/usr/lib/clang/17/include"
    - "-I/opt/devkitpro/devkitARM/arm-none-eabi/include/c++/14.1.0"
    - "-I/opt/devkitpro/devkitARM/arm-none-eabi/include/c++/14.1.0/arm-none-eabi"
    - "-I/opt/devkitpro/devkitARM/arm-none-eabi/include"
    - "-I/opt/devkitpro/libgba/include"
    - "-I/opt/devkitpro/devkitARM/include"
  Remove:
    - "-m*"
    - "-f*"
  Compiler: clang++

Diagnostics:
  Suppress:
    - typecheck_expression_not_modifiable_lvalue
    - alignas_underaligned
    - constexpr_var_requires_const_init

Index:
  Background: Build
