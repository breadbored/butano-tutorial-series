[
  {
    "label": "(gdb) Launch",
    "request": "launch",
    "adapter": "GDB",
    "program": "$ZED_WORKTREE_ROOT/$ZED_WORKTREE_BASENAME.elf",
    "cwd": "$ZED_DIRNAME",
    "initialize_args": {
      "targetArchitecture": "arm",
      "stopAtEntry": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/opt/devkitpro/devkitARM/bin/arm-none-eabi-gdb",
      "miDebuggerServerAddress": "localhost:2345",
      "setupCommands": [
        {
          "text": "shell open -a /Applications/mGBA.app --args -g \"$ZED_WORKTREE_ROOT/untitled-adventure.elf\"",
        },
      ],
    },
  },
]
